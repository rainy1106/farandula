<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_1sdp"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="@color/black">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/userUpdateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your desire title"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white" />


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/dialogDismiss_button"
                        android:layout_width="@dimen/button_width_medium"
                        android:layout_height="@dimen/button_height"
                        android:layout_margin="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:text="OK"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/round_background_yellow" />

                <Button
                        android:id="@+id/dialogDismissC_button"
                        android:layout_width="@dimen/button_width_medium"
                        android:layout_height="@dimen/button_height"
                        android:layout_margin="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:text="@string/cancle"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/round_background_yellow" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>