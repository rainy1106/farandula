<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/dialog_bg">

    <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/closeId"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cancel_black" />

    <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/checkId"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/check" />

    <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/checkText"
            android:layout_below="@id/checkId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thankyou"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />

    <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/checkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/payment_is_successfully_done"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
</RelativeLayout>