<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_black_border"
    android:orientation="horizontal">

    <Button
        android:id="@+id/subtract_btn"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:background="@drawable/two_corner_round_grey"
        android:text="-" />

    <TextView
        android:id="@+id/number_counter"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:background="@drawable/two_corner_round_black"
        android:text="+" />

</LinearLayout>
