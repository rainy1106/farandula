<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_2sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:background="@color/light_gray"
                                android:textStyle="bold"
                                tools:text="djfsdhfsdkjflk" />

                        <TextView
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="wrap_content"
                                android:background="@color/light_gray"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold"
                                tools:text="djfsdhfsdkjflk" />

                    </LinearLayout>

                    <TextView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/circular_textview"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/calender" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:background="@color/light_gray"
                                android:textColor="@color/darker_grey"
                                android:textSize="@dimen/_5sdp"
                                android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/clock" />

                        <TextView
                                android:background="@color/light_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:textColor="@color/darker_grey"
                                android:textSize="@dimen/_5sdp"
                                android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardCornerRadius="@dimen/_3sdp"
                            android:elevation="@dimen/_2sdp">

                        <ImageView
                                android:background="@color/white"
                                android:layout_width="@dimen/_30sdp"
                                android:src="@color/light_gray"
                                android:layout_height="@dimen/_30sdp" />
                    </androidx.cardview.widget.CardView>
                    <!-- <ImageView
                             android:id="@+id/product_image_1"
                             android:layout_width="@dimen/_30sdp"
                             android:layout_height="@dimen/_30sdp" />-->

                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/darker_grey" />

                <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardCornerRadius="@dimen/_3sdp"
                            android:elevation="@dimen/_2sdp">

                        <ImageView
                                android:background="@color/white"
                                android:src="@color/light_gray"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp" />
                    </androidx.cardview.widget.CardView>
                    <!-- <ImageView
                             android:id="@+id/product_image_2"
                             android:layout_width="@dimen/_30sdp"
                             android:layout_height="@dimen/_30sdp" />-->

                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/textViewProPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/darker_grey" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/cardx2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/darker_grey"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/textViewTotalKitchen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                            android:id="@+id/moreDetailsId"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@color/light_gray"
                            android:textAllCaps="false"
                            android:textColor="@color/text_selector_effect"
                            android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>